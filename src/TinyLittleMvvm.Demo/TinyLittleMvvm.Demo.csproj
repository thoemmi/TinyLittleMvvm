<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFrameworks>net472;netcoreapp3.0</TargetFrameworks>
    <OutputType>winexe</OutputType>
    <UseWPF>true</UseWPF>
    <DebugType>Full</DebugType>
    <OutputTypeEx>winexe</OutputTypeEx>
    <StartupObject>TinyLittleMvvm.Demo.App</StartupObject>
    <IsPackable>false</IsPackable>

    <!--
      Instruct GitVersion to NOT generate its own AssemblyInfo file. Setting MSBuild properties
      is sufficient, and the SDK build will use those properties to create the full temporary AssemblyInfo file
    -->
    <UpdateAssemblyInfo>false</UpdateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup Label="Configuration">
    <RootNamespace>TinyLittleMvvm.Demo</RootNamespace>
    <AssemblyName>TinyLittleMvvm.Demo</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <ApplicationDefinition Update="App.xaml">
      <SubType>Designer</SubType>
    </ApplicationDefinition>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GitVersionTask" Version="5.0.0-beta4-9">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TinyLittleMvvm\TinyLittleMvvm.csproj" />
  </ItemGroup>

</Project>
